// how to make a heart on olede display esp32



#include <Arduino.h>
#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64

#define OLED_RESET -1
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);

void setup() {
    Serial.begin(115200);

    if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
        Serial.println("Erreur OLED");
        while(true);
    }

    display.clearDisplay();



    // Cercle gauche
    display.fillCircle(54, 25, 12, SSD1306_WHITE);

    // Cercle droit
    display.fillCircle(74, 25, 12, SSD1306_WHITE);

    // Triangle bas
    display.fillTriangle(42, 30, 86, 30, 64, 60, SSD1306_WHITE);

    display.display();
}

void loop() {
}
